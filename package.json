{
  "name": "social-media-ripoff",
  "engines": {
    "node": "v16.10.0",
    "npm": "^7.24.2"
  },
  "scripts": {
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "server": "npm run install-server && npm start",
    "install-server": "cd server && npm install",
    "start": "NODE_ENV=production concurrently --kill-others-on-fail \"npm run server\""
  },
  "dependencies": {
    "concurrently": "^6.4.0"
  },
  "homepage": "https://social-media-ripoff.herokuapp.com/",
  "root": "build/",
  "routes": {
    "/**": "index.html"
  }
}